# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Gemini API Keys - Use either single key or multiple keys for load balancing
GEMINI_API_KEY=your_gemini_api_key_here
# For multiple keys (recommended for rate limiting), use comma-separated values:
# GEMINI_API_KEYS=key1_here,key2_here,key3_here

# Financial Data API Keys
FMP_API_KEY=your_financial_modeling_prep_api_key_here

# News API Keys (optional)
NEWS_API_KEY=your_news_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Configuration
DEFAULT_LLM_PROVIDER=openai
LOG_LEVEL=INFO
CACHE_DURATION=3600

# Rate Limiting Configuration (for Gemini API)
GEMINI_MAX_REQUESTS_PER_MINUTE=10
GEMINI_RETRY_MAX_ATTEMPTS=3
GEMINI_RETRY_BASE_DELAY=1.0
GEMINI_RETRY_MAX_DELAY=60.0

# Gemini Model Configuration - Override default models if needed
GEMINI_PRIMARY_MODEL=gemini-2.0-flash
GEMINI_FALLBACK_MODEL=gemini-1.5-flash

# Data Sources Configuration
YAHOO_FINANCE_ENABLED=true
SINA_FINANCE_ENABLED=true
USE_CACHE=true

# Analysis Configuration
TECHNICAL_ANALYSIS_PERIOD=252  # days
FUNDAMENTAL_ANALYSIS_ENABLED=true
NEWS_ANALYSIS_ENABLED=true
SENTIMENT_ANALYSIS_ENABLED=true

# Report Configuration
SAVE_REPORTS=true
REPORTS_DIR=./reports
REPORT_FORMAT=markdown

# API Rate Limiting
API_RATE_LIMIT=60  # requests per minute
REQUEST_TIMEOUT=30  # seconds 